package indra.gesvoto.services.daos;



import java.util.Set;

import org.hibernate.Criteria;
import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.Transaction;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import indra.gesvoto.services.datos.Concurso;
import indra.gesvoto.services.datos.Marca;
import indra.gesvoto.services.datos.Producto;
import indra.gesvoto.services.datos.Role;
import indra.gesvoto.services.datos.Usuario;
import indra.gesvoto.services.datos.Usuarioyroles;

@Repository
public class VotacionesDao {
	
	@Autowired
	private SessionFactory sessionFactory;

	public SessionFactory getSessionFactory() {
		return sessionFactory;
	}

	public void setSessionFactory(SessionFactory sessionFactory) {
		this.sessionFactory = sessionFactory;
	}
	
	public void grabaUsuario(Usuarioyroles  usuarioyroles) throws Exception
	{
		
		Session sesion= getSessionFactory().openSession();
		Transaction tx= sesion.beginTransaction();
		sesion.saveOrUpdate(usuarioyroles.getUsuario());
		for (Role	 role: usuarioyroles.getRoles()) {
			sesion.saveOrUpdate(role);
		}
		tx.commit();
		sesion.close();
		
	}

	public Set<Concurso> getConcursos() {
		Session sesion= getSessionFactory().openSession();
		Criteria criteria= sesion.createCriteria(Concurso.class);
		Set<Concurso> concursos=(Set<Concurso>) criteria.list();
		return concursos;
	}
	
	public Set<Producto> getProductosDeConcurso(int idConcurso) {
		Session sesion= getSessionFactory().openSession();
		Criteria criteria= sesion.createCriteria(Producto.class);
		
		Set<Producto> productos=(Set<Producto>) criteria.list();
		return productos;
	}

	
	public Set<Marca> getProducto(int idConcurso) {
		Session sesion= getSessionFactory().openSession();
		Criteria criteria= sesion.createCriteria(Marca.class);
		Set<Marca> marcas=(Set<Marca>) criteria.list();
		return marcas;
	}
}
