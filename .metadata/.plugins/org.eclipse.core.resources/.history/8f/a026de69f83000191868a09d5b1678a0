package indra.gesvoto.services.controller;


import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.MediaType;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.bind.annotation.RestController;

import indra.gesvoto.services.beans.Persona;
import indra.gesvoto.services.daos.VotacionesDao;

@RestController
@RequestMapping("/gesvoto")
public class GesvotoServices {
	@Autowired
	private VotacionesDao votacionesDao;
	
	@RequestMapping(value="/nombre",produces=MediaType.APPLICATION_JSON_VALUE,consumes=MediaType.APPLICATION_JSON_VALUE,method=RequestMethod.POST)	
	
	public  @ResponseBody Persona nombre() {
		Persona persona= new Persona();
		persona.setNombre("PEPE");
		persona.setDireccion("CASA");
		persona.setTelefono("22222222");
		
		try {
			getVotacionesDao().grabaUsuario();
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return persona;
	}

	public VotacionesDao getVotacionesDao() {
		return votacionesDao;
	}

	public void setVotacionesDao(VotacionesDao votacionesDao) {
		this.votacionesDao = votacionesDao;
	}

}

