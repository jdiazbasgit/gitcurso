package test;

import static org.junit.jupiter.api.Assertions.*;

import org.junit.Before;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;

import excepciones.InstrumentoRotoException;
import instrumentos.Instrumento;

class TestInstrumento {

	private Instrumento instrumento;
	
	@BeforeEach
	void carga() {
		setInstrumento(new Instrumento());
		getInstrumento().setSonido("algo");
	}
	
	@Test
	void test() throws InstrumentoRotoException {
		
		String sonido=getInstrumento().sonar();
		assertNotNull(sonido);
	}

	public Instrumento getInstrumento() {
		return instrumento;
	}

	public void setInstrumento(Instrumento instrumento) {
		this.instrumento = instrumento;
	}

}
